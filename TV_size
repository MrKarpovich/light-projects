#include <FastLED.h>

#define NUM_LEDS 300    // –≤—Å–µ–≥–æ —Å–≤–µ—Ç–æ–¥–∏–æ–¥–æ–≤ –≤ –ª–µ–Ω—Ç–µ
#define DATA_PIN 13     // –∫ –∫–∞–∫–æ–º—É –ø–∏–Ω—É –ø–æ–¥–∫–ª—é—á–µ–Ω–∞ –ª–µ–Ω—Ç–∞
#define BRIGHTNESS 100  // —è—Ä–∫–æ—Å—Ç—å (0-255)

CRGB leds[NUM_LEDS];    // –º–∞—Å—Å–∏–≤ –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è —Ü–≤–µ—Ç–æ–≤ –∫–∞–∂–¥–æ–≥–æ –¥–∏–æ–¥–∞

void setup() {
  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ª–µ–Ω—Ç—ã
  FastLED.addLeds<WS2812, DATA_PIN, GRB>(leds, NUM_LEDS);
  FastLED.setBrightness(BRIGHTNESS);
  
  // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ü–≤–µ—Ç–∞ –¥–ª—è –∫–∞–∂–¥–æ–≥–æ —É—á–∞—Å—Ç–∫–∞ –ª–µ–Ω—Ç—ã
  // –î–∏–æ–¥—ã –Ω—É–º–µ—Ä—É—é—Ç—Å—è —Å 0 –¥–æ 299
  
  // üî¥ –ö—Ä–∞—Å–Ω—ã–π —É—á–∞—Å—Ç–æ–∫: –¥–∏–æ–¥—ã 0 - 74 (75 —à—Ç—É–∫)
  for (int i = 0; i <= 61; i++) {
    leds[i] = CRGB(255, 0, 0);  // –∫—Ä–∞—Å–Ω—ã–π –Ω–∏–∂–Ω—è—è —Å—Ç–æ—Ä–æ–Ω–∞
  }
  
  // üü¢ –ó–µ–ª—ë–Ω—ã–π —É—á–∞—Å—Ç–æ–∫: –¥–∏–æ–¥—ã 75 - 149 (75 —à—Ç—É–∫)
  for (int i = 62; i <= 98; i++) {
    leds[i] = CRGB(0, 255, 0);  // –∑–µ–ª—ë–Ω—ã–π –ª–µ–≤–∞—è —Å—Ç–æ—Ä–æ–Ω–∞
  }
  
  // üîµ –°–∏–Ω–∏–π —É—á–∞—Å—Ç–æ–∫: –¥–∏–æ–¥—ã 150 - 224 (75 —à—Ç—É–∫)
  for (int i = 99; i <= 160; i++) {
    leds[i] = CRGB(0, 0, 255);  // —Å–∏–Ω–∏–π –≤–µ—Ä—Ö
  }
  
  // üü° –ñ—ë–ª—Ç—ã–π —É—á–∞—Å—Ç–æ–∫: –¥–∏–æ–¥—ã 225 - 299 (75 —à—Ç—É–∫)
  for (int i = 161; i <= 196; i++) {
    leds[i] = CRGB(255, 255, 0);  // –∂—ë–ª—Ç—ã–π –ø—Ä–∞–≤–∞—è —Å—Ç–æ—Ä–æ–Ω–∞
  }
  
  // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ü–≤–µ—Ç–∞ –Ω–∞ –ª–µ–Ω—Ç—É
  FastLED.show();
}

void loop() {
  // –ù–∏—á–µ–≥–æ –Ω–µ –¥–µ–ª–∞–µ–º ‚Äî —Ü–≤–µ—Ç–∞ —Å—Ç–∞—Ç–∏—á–Ω—ã–µ
  // –õ–µ–Ω—Ç–∞ –≥–æ—Ä–∏—Ç –ø–æ—Å—Ç–æ—è–Ω–Ω–æ –≤—ã–±—Ä–∞–Ω–Ω—ã–º–∏ —Ü–≤–µ—Ç–∞–º–∏
}
